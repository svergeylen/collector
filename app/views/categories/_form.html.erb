
<%= form_with model: @category, local: true, class:"form-horizontal" do |form| %>

 <% if @category.errors.any? %>
    <div id="error_explanation">
        <%= pluralize(@category.errors.count, "erreur") %> bloquent la création de cette catégorie :
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <label class="control-label col-sm-2" for="category_name">Nom</label>
    <div class="col-sm-3">
      <%= form.text_field :name, id:"category_name", class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="category_default_view">Vue par défaut</label>
    <div class="col-sm-3">
      <%= form.select(:default_view, options_for_select([ ["Liste", "list"],["Galerie", "gallery"] ], selected_key = @category.default_view), class: "form-control" ) %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.label :menu do %>
        <%= form.check_box :menu, id: :category_menu %> Afficher dans le menu supérieur 
      <% end %>
    </div>
    <div class="col-sm-offset-2 col-sm-10">  
      <%= form.label :view_alphabet do %>
        <%= form.check_box :view_alphabet, id: :category_view_alphabet %> Afficher la barre Alphabet 
      <% end %>
    </div>
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.label :view_search do %>
        <%= form.check_box :view_search, id: :category_view_search %> Afficher la barre de recherche
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit submit_text, class:"btn btn-primary" %> 
    </div>
  </div>
</form> 

	<p>
    
  </p>

<% end %>
