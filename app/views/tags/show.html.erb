<div class="rounded-box">
	<div class="pull-right">
		<div class="dropdown">
			<button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
				<span class="glyphicon glyphicon-cog"></span>
		 	<span class="caret"></span></button>
			<ul class="dropdown-menu dropdown-menu-right">
				<li><%= link_to "Nouveau dossier", new_tag_path %></li>
			    <li><%= link_to "Modifier le dossier", edit_tag_path(@tag)  %></li>
			    <li><%= link_to "Supprimer le dossier", tag_path(@tag), method: :delete, data: { confirm: 'Etes-vous certain de supprimer ce dossier et tout ce qu\'il contient ?' } %>
			    </li>
		  	</ul>
		</div>				
	</div>


	<h1><%= @tag.name %></h1>
	<p><%= breadcrumbs_for(session[:a]) %> </p>

	<% if @children.present? %>
		<ul>
		<% @children.each do |tag| %>
			<li><%= get_tag_path(tag)  %></li>
		<% end %>
		</ul>
	<%end %>

	<% if @items.present? %>
		<% if false %>
			<%= render partial: "gallery", locals: {items: @items } %>
		<% else %>
			<%= render partial: "table", locals: { items: @items } %>
		<% end %>
	<% end %>


</div>