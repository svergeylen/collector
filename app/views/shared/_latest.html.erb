


<h2>Nouveautés <small> <%= category_name %>  </small></h2>

<table class="table table-striped">
	<tr>
		<th>Série</th>
		<th>Titre</th>
		<th>Ajouté par</th>
	</tr>
	<% items.each do |item| %>
		<tr>
			<td><%= link_to item.series.name, series_path(item.series) %></td>
			<td><%= link_to item.name, series_path(item.series) %> </td>
			<td><%= link_to(item.adder.name, item.adder) if item.adder %>, le <%= short_date(item.created_at) %></td>
		</tr>
	<% end %>
</table>

