<%= form_with(model: item, local: true, :html => { :multipart => true } ) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group row">
    <%= form.label :name, "Titre", class:"col-form-label col-sm-2" %>
    <div class="col-sm-1">
      <%= form.text_field :number, id: :item_number, value: item.friendly_number, class: "form-control", placeholder:"n°", autocomplete: :off %>
    </div>
    <div class="col-sm-5">
      <%= form.text_field :name, id: :item_name, class: "form-control", placeholder:"Titre", autocomplete: :off %>
    </div>
  </div>
  
  <div class="form-group row">
    <label for="tag_series" class="col-sm-2 col-form-label">Série</label>
    <div class="col-sm-6">
      <%= form.text_field :tag_series, id: "tag_series", class: "form-control", autocomplete: :off, data: { tag_list: @series_list } %>
    </div>
  </div>

  <div class="form-group row">
    <label for="tag_auteurs" class="col-sm-2 col-form-label">Auteurs</label>
    <div class="col-sm-6">
      <%= form.text_field :tag_auteurs, id: "tag_auteurs", class: "form-control", autocomplete: :off, data: { tag_list: @auteurs_list } %>
    </div>
  </div>

  <div class="form-group row">
    <label for="tag_rangements" class="col-sm-2 col-form-label">Rangement</label>
    <div class="col-sm-6">
      <%= form.text_field :tag_rangements, id: "tag_rangements", class: "form-control", autocomplete: :off, data: { tag_list: @rangements_list } %>
    </div>
  </div>
 
  <%= render partial: "attachement_form", locals: { form: form, item: item } %>

  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-1">
      <%= hidden_field_tag "view", "bd" %>
      <%= form.submit "Sauver", class:"btn btn-primary" %>
    </div>
  </div>

<% end %>

