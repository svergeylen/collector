      <%= form.text_field :number, id: :item_number, value: item.friendly_number, class: "form-control", placeholder:"nÂ°", autocomplete: :off %>
    </div>
    <div class="col-sm-5">
      <%= form.text_field :name, id: :item_name, class: "form-control", placeholder:"Titre", autocomplete: :off %>
    </div>
  </div>
  
 
  <div class="form-group row">
    <label for="tag_ids" class="control-label col-sm-2">Tags</label>
